<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_regular</item>
    </style>

    <style name="BaseText.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseText.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="BaseButton" parent="BaseText">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="BaseText.H1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="BaseSpinner" parent="BaseText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:spinnerMode">dialog</item>
    </style>

</resources>
